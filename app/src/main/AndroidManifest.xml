<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avsmart.keyboard">

    <uses-sdk android:minSdkVersion="24" android:targetSdkVersion="34"/>

    <application
        android:label="AVsmart Keyboard"
        android:allowBackup="true"
        android:theme="@style/Theme.AVSmart">
        <service android:name=".ime.AVSmartIME"
                 android:label="AVsmart Keyboard"
                 android:permission="android.permission.BIND_INPUT_METHOD"
                 android:exported="true">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>
            <meta-data android:name="android.view.im" android:resource="@xml/method" />
        </service>

        <activity android:name=".ui.SettingsActivity" android:exported="true"/>
        <activity android:name=".ui.wordlist.WordListEditorActivity" android:exported="true"/>
    </application>
</manifest>
